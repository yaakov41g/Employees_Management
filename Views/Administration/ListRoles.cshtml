@*list of all the roles*@
@model IEnumerable<IdentityRole>
@*Api directive to add claim policy for the Edit button*@
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authorizationService;

@{
    ViewBag.Title = "All Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
       asp-controller="administration">Add new role</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
               
                @*see comments in ListUsers view. they are the same here*@
                <form method="post" asp-action="DeleteRole" asp-route-id="@role.Id">
                    @if ((await authorizationService.AuthorizeAsync(User, "EditRolePolicy")).Succeeded)
                    {
                        @*only user with Edit Role claim will see the Edit button*@@*Except here, we need to add authority restriction in the controller also , to prevent a user from typing the url of EditRole + role_Id and getting access to the form*@
                        <a asp-action="EditRole" asp-controller="Administration"
                           asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                    }
                    <span id="confirmDeleteSpan_@role.Id" style="display:none">
                        <span>Are you sure you want to delete?</span>
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <a href="#" class="btn btn-primary"
                           onclick="confirmDelete('@role.Id', false)">No</a>
                    </span>

                    <span id="deleteSpan_@role.Id">
                        <a href="#" class="btn btn-danger"
                           onclick="confirmDelete('@role.Id', true)">Delete</a>
                    </span>
                </form>
            </div>
        </div>

    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="administration" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}

}
